{
  "name": "backend",
  "version": "0.0.1",
  "private": true,
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/server.ts",
    "start": "bun src/server.ts",
    "build": "bun build src/server.ts --outdir ./dist --target bun",
    "typecheck": "tsc --noEmit",
    "lint": "npx eslint src --ext .ts --fix",
    "format": "npx prettier --write src"
  },
  "dependencies": {
    "express": "^4.21.2",
    "zod": "^3.25.76",
    "dotenv": "^16.6.1",
    "cors": "^2.8.5",
    "helmet": "^8.1.0",
    "morgan": "^1.10.1"
  },
  "devDependencies": {
    "@types/express": "^4.17.23",
    "@types/node": "^20.19.9",
    "@types/cors": "^2.8.19",
    "@types/morgan": "^1.9.10",
    "typescript": "^5.9.2",
    "tsx": "^4.20.3"
  }
}
